IMPLEMENTATION
    subscription_create_monitored_item_it_i

REFINES
    subscription_create_monitored_item_it

SEES
    constants

CONCRETE_VARIABLES
    rreqs_i

INVARIANT
    rreqs_i : NAT &
    rreqs_i : 0 .. k_n_monitoredItem_max &
    rreqs_to_iterate = 1..rreqs_i

INITIALISATION
    rreqs_i := 0

OPERATIONS
    continue <-- init_iter_monitored_item_request(nb_req) =
    BEGIN
        rreqs_i := nb_req;
        continue := bool(0 < nb_req)
    END
    ;

    continue, index <-- continue_iter_monitored_item_request =
    BEGIN
        index := rreqs_i;
        rreqs_i := rreqs_i - 1;
        continue := bool(0 < rreqs_i)
    END

END
